<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block titleBase %}Edouard{% endblock %}</title>
    <!--    BOOTSTRAP -->
    <link href="{{ asset('/bootstrap/css/bootstrap.min.css') }}" media="print,screen" rel="stylesheet"/>
    <!--    JQUERY -->
    <script type="text/javascript" src="{{ asset('/scripts/jquery-3.1.1.min.js') }}"></script>
    <!-- Google Analytic -->
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-99323749-1', 'auto');
        ga('send', 'pageview');

    </script>
    <!-- CSS -->
    <link  href="{{ asset('/css/edouard.css') }}" media="print,screen" rel="stylesheet"/>
    {% block head %}{% endblock %}
</head>
<body>
<a href="#" title="Haut de page" class="scrollup"><i class="fa fa-arrow-up"></i></a>
<div class="container">
    {{ include('HolluxBase/nav.html.twig') }}
    {% for flash_message in app.session.flashBag.get('error') %}
        <div class="flash-notice flash-bg-red">
            <p>{{ flash_message }}</p>
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="flash-notice flash-bg-24bd24">
            <p>{{ flash_message }}</p>
        </div>
    {% endfor %}

    {% block principal %}{% endblock %}

</div>

<div class="footer">
    {{ include('HolluxBase/footer.html.twig') }}
</div>

{% block script %}
    <!--    BOOTSTRAP JS -->
    <script type="text/javascript" src="{{ asset('/bootstrap/js/bootstrap.min.js') }}"></script>
    <!--    Edouard JS -->
    <script type="text/javascript" src="{{ asset('/scripts/edouard.js') }}"></script>
{% endblock %}
</body>
</html>