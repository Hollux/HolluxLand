    <script src="https://cdn.datatables.net/1.10.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            $('#categorie-list').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "{{ path('categorie_paginate') }}",
