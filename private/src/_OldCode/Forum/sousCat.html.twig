{% extends":ForumBase:base.html.twig" %}

{% block principal %}

    {% for post in sousCat %}
        <h2>{{ post.title }}</h2>
        {% for child in post.childs %}
            <div class="row">
                <div class="col-md-2">
                    <p>{{ child.author.name }}</p>
                    <p>{{ child.date|date("m/d/Y") }}</p>
                </div>
                <div class="col-md-10">
                    <a href="{{ path('sujet', {'id' : child.id }) }} "><h2>{{ child.title }}</h2></a>
                </div>
            </div>

        {% endfor %}
    {% endfor %}


    {% if is_granted('ROLE_ADMIN') %}
        <br>

        {# form(form) #}
    {% else %}
    {% endif %}



{% endblock %}