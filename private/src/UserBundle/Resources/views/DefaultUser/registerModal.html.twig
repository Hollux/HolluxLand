<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Formulaire Register</h4>
</div>
<div class="modal-body">

    {{ form_start(form, {'action': path('registerModal'), 'method': 'POST'}) }}

    <div class="form-group">
        {{ form(form) }}
        <a class="btn btn-primary" onclick="submit();return false;">Submit</a>
    </div>

    {{ form_end(form) }}
</div>

<script>
    var submit = function () {
        var form = jQuery('#modal form');
        console.log(form);
        jQuery.post(
            "{{ path('registerModal') }}",
            form.serialize(),
            jQuery('#modal').modal('hide')
        );
    };
</script>

